@page "/"
@page "/welcome"
@inject IDialogService DialogService

<PageTitle>Welcome</PageTitle>

<MudHidden Breakpoint="Breakpoint.MdAndDown">
    <Wide></Wide>
</MudHidden>

<MudHidden Breakpoint="Breakpoint.LgAndUp">
    <Mobile></Mobile>
</MudHidden>


@code {

    private Task OpenDialogAsync(double imageId)
    {
        var parameters = new DialogParameters<ImageDialog>
        {
            { x => x.ImageId, imageId }
        };

        var options = new DialogOptions { FullScreen = true, CloseButton = true, CloseOnEscapeKey = true };

        return DialogService.ShowAsync<ImageDialog>("", parameters, options);
    }

}